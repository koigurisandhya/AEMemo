#!/usr/bin/env groovy

pipeline{
	
stage('Check out Code, Prepare environment') {
            parallel (
                "getEnvironment":{
                    echo sh(returnStdout: true, script: 'env')
                },
                "checkout code" : {
                    checkout scm
                }
            )
            dir('node_modules/') {
                deleteDir()
            }
            sh 'echo $PATH'
            sh "node -v"
            sh "npm -v"
	    sh "gem list"
        } 
}

